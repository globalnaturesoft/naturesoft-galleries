<p id="notice"><%= notice %></p>

<% title "Galleries" %>

<div class="page_actions">
    <%= link_to ("#{t(:new_gallery)}" + '<i class="icon-plus22 position-right"></i>').html_safe, naturesoft_galleries.new_admin_gallery_path, class: 'btn btn-primary' %>
</div>
<br />
<form class="listing-form">
  
  <div class="panel panel-flat">
      <div class="panel-body filter-box">                
          <div class="row">
              <div class="col-md-3">
                  <div class="form-group">
                      <label><%= t(:image_style) %></label>
                      <%= select_tag(:style, options_for_select(Naturesoft::Galleries::Gallery.filter_image_style, :selected => params[:style]), include_blank: t(:all), class: "select2") %>
                  </div>
              </div>
              <div class="col-md-3">
                  <div class="form-group">
                      <label><%= t(:sort_by) %></label>
                      <%= select_tag(:sort_by, options_for_select(Naturesoft::Galleries::Gallery.sort_by, :selected => params[:sort_by]), class: "select2") %>
                  </div>
              </div>
              <div class="col-md-3">
                  <div class="form-group">
                      <label><%= t(:sort_order) %></label>
                      <%= select_tag(:sort_orders, options_for_select(Naturesoft::Galleries::Gallery.sort_orders, :selected => params[:sort_orders]), class: "select2") %>
                  </div>
              </div>
              <div class="col-md-3">
                  <div class="form-group has-feedback">
                      <label><%= t(:search) %></label>
                      <input type="text" name="key" class="form-control" placeholder="Enter search..." value="<%= params[:key] %>">
                      <div class="form-control-feedback">
                          <i class="icon-search4 text-size-base"></i>
                      </div>
                  </div>
              </div>
          </div>
      </div>
  </div>
  <div class="btn-group list_actions mb-10 hide">
      <button type="button" class="btn btn-xs btn-info dropdown-toggle" data-toggle="dropdown">
          Actions <span class="caret"></span>
      </button>
      <ul class="dropdown-menu">											
          <li>
              <a href="" data-href="<%= naturesoft_galleries.delete_admin_galleries_path %>" data-confirm="Are you sure!" data-method="DELETE">
                  <i class="icon-enter"></i> Delete
              </a>
          </li>            
      </ul>
  </div>
  <!-- Basic datatable -->
  <div class="panel panel-flat">
    <div class="table-container">
      <table class="table table-striped">
        <thead>
          <tr class="bg-teal-800">
              <th width="1%" class="check_all_list">
                <input type="checkbox" class="styled">
              </th>
              <th><%= t(:name) %></th>
              <th><%= t(:size) %></th>
              <th><%= t(:image_style) %></th>
              <th class="text-center"><%= t(:creator) %></th>
              <th><%= t(:created_at) %></th>
              <th><%= t(:status) %></th>
              <th class="text-right"><%= t(:actions) %></th>
          </tr>
        </thead>
        <tbody>
          <% @galleries.each do |gallery| %>
            <tr>
              <td>
                <input type="checkbox" class="node styled"
                  name="ids[]"
                  value="<%= gallery.id %>"
                />
              </td>
              <td>
                <%= gallery.name %>
              </td>
              <td>
                <%= gallery.width %>x<%= gallery.height %>
              </td>
              <td>
                <%= gallery.image_style %>
              </td>
              <td class="text-center">
                <%= user_box(gallery.user) %>
              </td>
              <td><%= gallery.created_at.strftime("%d/%m/%Y") %></td>
              <td>
                <%= display_status(gallery.status) %>
              </td>
              <td class="text-right">
                <div class="btn-group">
                  <%= link_to '<i class="icon-pencil"></i>'.html_safe, naturesoft_galleries.edit_admin_gallery_path(gallery), class: "btn bg-teal-400 btn-icon" %>
                  <button type="button" class="btn bg-teal-400 dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><span class="caret"></span></button>
                  <ul class="dropdown-menu dropdown-menu-right">
                    <% if gallery.status == 'inactive' %>
                      <li>
                        <%= link_to "<i class=\"icon-unlocked2\"></i> Enable".html_safe, naturesoft_galleries.enable_admin_galleries_path(gallery), method: :put %>
                      </li>
                    <% end %>
                    <% if gallery.status == 'active' %>
                      <li>
                        <%= link_to "<i class=\"icon-lock2\"></i> Disable".html_safe, naturesoft_galleries.disable_admin_galleries_path(gallery), method: :put %>
                      </li>
                    <% end %>
                    <li class="divider"></li>
                    <li>
                      <%= link_to '<i class="glyphicon glyphicon-trash"></i>'.html_safe + t(:delete), naturesoft_galleries.admin_gallery_path(gallery), method: :delete, data: { confirm: 'Are you sure?' } , class: "backend_delete_item" %>
                    </li>
                  </ul>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="dataTables_wrapper no-footer">
        <div class="datatable-footer showed">
            <div class="dataTables_info" ><%= page_entries_info @galleries %></div>
            <div class="dataTables_paginate paging_simple_numbers">
              <%= will_paginate @galleries, previous_label: '←', next_label: '→', renderer: BootstrapPagination::Rails %>
            </div>
        </div>
      </div>
    
    </div>
  </div>
  <!-- /basic datatable -->
</form>
